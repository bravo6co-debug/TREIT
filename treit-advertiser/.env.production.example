# TreitMaster Advertiser App - Production Environment Variables
# Copy this file to .env.production and fill in your production values

# Supabase Configuration (REQUIRED)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_production_anon_key

# App URLs (REQUIRED)
VITE_USER_APP_URL=https://app.your-domain.com
VITE_ADVERTISER_APP_URL=https://advertiser.your-domain.com
VITE_ADMIN_APP_URL=https://admin.your-domain.com

# App Names (REQUIRED)
VITE_USER_APP_NAME=TreitMaster User
VITE_ADVERTISER_APP_NAME=TreitMaster Advertiser
VITE_ADMIN_APP_NAME=TreitMaster Admin

# Auth Configuration (REQUIRED)
VITE_AUTH_REDIRECT_URL=https://advertiser.your-domain.com/auth/callback
VITE_AUTH_SITE_URL=https://advertiser.your-domain.com

# Payment Gateway (REQUIRED for advertiser)
VITE_PAYMENT_GATEWAY_URL=https://api.your-payment-provider.com
VITE_PAYMENT_PUBLIC_KEY=your_payment_public_key

# External Services (OPTIONAL)
VITE_GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
VITE_ANALYTICS_PUBLIC_KEY=your_analytics_key

# Environment Configuration
VITE_NODE_ENV=production
VITE_DEBUG_MODE=false
VITE_ENABLE_LOGGING=false

# Feature Flags
VITE_FEATURE_CAMPAIGN_ANALYTICS=true
VITE_FEATURE_DEEPLINK_GENERATOR=true
VITE_FEATURE_BULK_OPERATIONS=true

# Rate Limiting Display
VITE_RATE_LIMIT_DISPLAY_INFO=false

# Legacy API Configuration (for compatibility)
VITE_APP_ENV=production
VITE_APP_VERSION=1.0.0
VITE_API_BASE_URL=https://your-project.supabase.co/functions/v1
VITE_LOG_LEVEL=error