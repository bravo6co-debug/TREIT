{
  "name": "treitmaster-monorepo",
  "version": "1.0.0",
  "description": "TreitMaster - 광고 캠페인 참여 플랫폼",
  "private": true,
  "workspaces": [
    "treit-app",
    "treit-advertiser",
    "treit-admin"
  ],
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:user\" \"npm run dev:advertiser\" \"npm run dev:admin\"",
    "dev:user": "cd treit-app && npm run dev",
    "dev:advertiser": "cd treit-advertiser && npm run dev",
    "dev:admin": "cd treit-admin && npm run dev",
    "build": "npm run build:user && npm run build:advertiser && npm run build:admin",
    "build:user": "cd treit-app && npm run build",
    "build:advertiser": "cd treit-advertiser && npm run build",
    "build:admin": "cd treit-admin && npm run build",
    "install:all": "npm install && npm run install:user && npm run install:advertiser && npm run install:admin",
    "install:user": "cd treit-app && npm install",
    "install:advertiser": "cd treit-advertiser && npm install",
    "install:admin": "cd treit-admin && npm install",
    "typecheck": "npm run typecheck:user && npm run typecheck:advertiser && npm run typecheck:admin",
    "typecheck:user": "cd treit-app && npm run typecheck",
    "typecheck:advertiser": "cd treit-advertiser && npm run typecheck",
    "typecheck:admin": "cd treit-admin && npm run typecheck",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:restart": "supabase stop && supabase start",
    "supabase:reset": "supabase db reset",
    "supabase:status": "supabase status",
    "supabase:migrate": "supabase migration new",
    "supabase:deploy": "supabase db push",
    "supabase:pull": "supabase db pull",
    "supabase:seed": "supabase db reset --linked && supabase db seed",
    "supabase:types": "supabase gen types typescript --local > types/supabase.ts",
    "supabase:functions": "supabase functions serve",
    "supabase:logs": "supabase logs",
    "test": "npm run test:integration && npm run test:e2e",
    "test:integration": "jest --config jest.config.js",
    "test:e2e": "playwright test",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "lint": "echo \"린트 스크립트가 필요합니다\" && exit 0",
    "clean": "rm -rf treit-app/dist treit-advertiser/dist treit-admin/dist",
    "clean:modules": "rm -rf node_modules treit-app/node_modules treit-advertiser/node_modules treit-admin/node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "npm run install:all && npm run supabase:start",
    "reset": "npm run supabase:reset && npm run dev"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "@vitest/ui": "^2.1.8",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^25.0.1",
    "supabase": "^1.200.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "광고",
    "캠페인",
    "리워드",
    "마케팅",
    "supabase",
    "react",
    "typescript"
  ],
  "author": "TreitMaster Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bravo6co-debug/TREIT.git"
  },
  "dependencies": {
    "dotenv": "^17.2.1"
  }
}
