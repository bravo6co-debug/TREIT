# TreitMaster Admin App - Production Environment Variables  
# Copy this file to .env.production and fill in your production values

# Supabase Configuration (REQUIRED)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_production_anon_key
VITE_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# App URLs (REQUIRED)
VITE_USER_APP_URL=https://app.your-domain.com
VITE_ADVERTISER_APP_URL=https://advertiser.your-domain.com
VITE_ADMIN_APP_URL=https://admin.your-domain.com

# App Names (REQUIRED)
VITE_USER_APP_NAME=TreitMaster User
VITE_ADVERTISER_APP_NAME=TreitMaster Advertiser
VITE_ADMIN_APP_NAME=TreitMaster Admin

# Auth Configuration (REQUIRED)
VITE_AUTH_REDIRECT_URL=https://admin.your-domain.com/auth/callback
VITE_AUTH_SITE_URL=https://admin.your-domain.com

# Admin Specific Configuration
VITE_ADMIN_SECRET_KEY=your_admin_secret_key
VITE_SUPER_ADMIN_EMAIL=admin@your-domain.com

# Monitoring & Analytics (REQUIRED for admin)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_ANALYTICS_PUBLIC_KEY=your_analytics_key
VITE_MONITORING_API_KEY=your_monitoring_key

# External Services (OPTIONAL)
VITE_GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
VITE_SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook

# Environment Configuration
VITE_NODE_ENV=production
VITE_DEBUG_MODE=false
VITE_ENABLE_LOGGING=true

# Feature Flags
VITE_FEATURE_FRAUD_DETECTION=true
VITE_FEATURE_SYSTEM_MONITORING=true
VITE_FEATURE_BULK_OPERATIONS=true
VITE_FEATURE_ADVANCED_ANALYTICS=true

# Rate Limiting Display
VITE_RATE_LIMIT_DISPLAY_INFO=false

# Legacy API Configuration (for compatibility)
VITE_APP_ENV=production
VITE_APP_VERSION=1.0.0
VITE_API_BASE_URL=https://your-project.supabase.co/functions/v1
VITE_LOG_LEVEL=info